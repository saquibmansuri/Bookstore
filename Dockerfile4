# Use the official .NET SDK image as the base image
FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build

# Set the working directory inside the container
WORKDIR /app

# Copy the project files to the container
COPY . .

# Build the application
RUN dotnet build src/Acme.BookStore.AuthServer/Acme.BookStore.AuthServer.csproj --configuration Release --output /app/out

# Use a smaller runtime image for the final image
FROM mcr.microsoft.com/dotnet/aspnet:7.0 AS runtime

# Set the working directory
WORKDIR /app

# Copy the built application from the build image
COPY --from=build /app/out .

# Expose the port the application will listen on
EXPOSE 8082

# Start the application
ENTRYPOINT ["dotnet", "Acme.BookStore.AuthServer.dll"]